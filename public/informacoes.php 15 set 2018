<script language="javascript">

// auto completa lista de produtos

function selectItem(li) { 

}

function formatItem(row) { 
	return row;
}

$(document).ready(function() {
	$("#produtos").autocomplete('busca_produtos.php', { minChars:1, matchSubset:1, matchContains:1, cacheLength:10, onItemSelect:selectItem, formatItem:formatItem, selectOnly:1, mode:"multiple",multipleSeparator:"," });
});

function validar(form) {

	with(form) {
	
		if (form.nome.value == "") { alert("Você deve informar seu nome"); return false; }
		else if (form.empresa.value == "") { alert("Você precisa informar o nome da empresa"); return false; }
		else if (form.email.value == "") { alert("Por favor informe seu endereço de e-mail"); return false; }
		else if (form.telefone.value == "") { alert("Informe seu telefone"); return false; }
		else {
			return true;
		}
	
	}
	
}

function salvar() {

	var nome = document.getElementById('nome').value;
	var empresa = document.getElementById('empresa').value;
	var cidade = document.getElementById('cidade').value;
	var estado = document.getElementById('estado').value;
	var endereco = document.getElementById('endereco').value;
	var telefone = document.getElementById('telefone').value;
	var email = document.getElementById('email').value;
	var produtos = document.getElementById('produtos').value;
	var comentarios = document.getElementById('comentarios').value;

	
	var div = document.getElementById('ctexto');

	new Ajax.Request('informacoes.php?do=novo', {
		
		method:'post',
		parameters: {nome: nome, empresa: empresa, cidade: cidade, estado: estado, endereco: endereco, telefone: telefone, email: email, produtos: produtos, comentarios: comentarios},
		onLoading: div.innerHTML = '<div class="ajax"><img src="../images/carregando.gif"><br>Enviando informações, por favor aguarde...</div>',
		onSuccess: function(transport) {
			
			if (200 == transport.status) {
				alert("Solicitação enviada com sucesso!");
				document.location = 'index.php';
				//div.innerHTML = '<div class="ajax"><img src="../images/carregando.gif"><br>Enviando informações, por favor aguarde...</div>'; // DEBUG
			}
			else {
				div.innerHTML = "ERRO: " + transport.responseText;
			}
		}
	});

}



</script>

